<odoo>
    <record id="view_custom_app_list" model="ir.ui.view">
        <field name="name">erp.custom.app.list</field>
        <field name="model">erp.custom.app</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_custom_app_form" model="ir.ui.view">
        <field name="name">erp.custom.app.form</field>
        <field name="model">erp.custom.app</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="menu_id"/>
                    </group>

                    <notebook>
                        <page string="Models">
                            <field name="model_ids">
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_custom_app_search" model="ir.ui.view">
        <field name="name">erp.custom.app.search</field>
        <field name="model">erp.custom.app</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
                <field name="menu_id"/>
            </search>
        </field>
    </record>

    <record id="action_custom_app" model="ir.actions.act_window">
        <field name="name">Custom Apps</field>
        <field name="res_model">erp.custom.app</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_custom_app"
              name="Custom Apps"
              action="action_custom_app"
              sequence="10"/>

    <record id="erp_custom_app_update_module" model="ir.actions.server">
        <field name="name">Update Module</field>
        <field name="model_id" ref="erp.model_erp_custom_app"/>
        <field name="binding_model_id" ref="erp.model_erp_custom_app" />
        <field name="state">code</field>
        <field name="code">
            for r in records:
                r.update_module()
        </field>
    </record>

</odoo>
